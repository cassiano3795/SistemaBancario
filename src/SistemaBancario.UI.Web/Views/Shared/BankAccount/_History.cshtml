@model List<SistemaBancario.Application.ViewModels.BankAccount.BankAccountDailyInfoViewModel>

<h1>Histórico</h1>

<ul class="list-group mb-3">
    @foreach (var bankAccountDailyInfo in Model)
    {
        <li class="list-group-item d-flex justify-content-between flex-column lh-condensed">
            <div class="d-flex">
                <h6 class="my-0">Saldo: R$@string.Format("{0:N2}", Math.Floor(bankAccountDailyInfo.BalanceAtDate * 100) / 100)</h6>
                <h6 class="mx-2 text-success">Rendimento: R$@string.Format("{0:N2}", Math.Floor(bankAccountDailyInfo.IncomeBalance * 100) / 100)</h6>
            </div>
            <small class="text-muted flex-">@bankAccountDailyInfo.ReferenceDate.ToString("dd/MM/yyyy")</small>
        </li>
    }

    @if (Model.Count == 0){
        <li class="list-group-item d-flex justify-content-between lh-condensed">
            <span class="d-flex align-items-center text-muted">Sem histórico</span>
        </li>
    }
</ul>
